# Zoom S2S Translator - Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================
# Google Cloud / Vertex AI Configuration
# ============================================

# Path to your Google Cloud service account JSON key file
# Download from: https://console.cloud.google.com/iam-admin/serviceaccounts
GOOGLE_APPLICATION_CREDENTIALS=/path/to/service-account.json

# Google Cloud Project ID
# Find at: https://console.cloud.google.com/home/dashboard
GOOGLE_CLOUD_PROJECT=your-project-id

# Vertex AI location (e.g., us-central1, europe-west1)
VERTEX_AI_LOCATION=us-central1

# ============================================
# Gemini API Configuration
# ============================================

# Gemini model to use for S2ST
GEMINI_MODEL=gemini-2.5-flash-s2st-exp-11-2025

# ============================================
# Application Configuration
# ============================================

# Debug mode (true/false)
# Enables verbose logging and development features
DEBUG=false

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================
# Audio Configuration (Optional)
# ============================================

# Override default sample rates (in Hz)
# SAMPLE_RATE_MIC=16000
# SAMPLE_RATE_SYSTEM=24000
# SAMPLE_RATE_OUTPUT=24000

# Override default chunk size (in frames)
# CHUNK_SIZE=1024

# ============================================
# Development Configuration (Optional)
# ============================================

# Development mode for Electron
NODE_ENV=development

# Enable Electron DevTools
# ELECTRON_ENABLE_DEVTOOLS=true
